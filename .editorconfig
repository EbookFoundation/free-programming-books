# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,mkd,mkdn,mdwn,mdown,markdown}]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2
